{% extends '/base.html.twig' %}
{% block body %}
    <section class="hero-area bg-1 text-center overly">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Header Contetnt -->
                    <div class="content-block">
                        <h1>Find address by postcode</h1>
                        <p>Join the millions who buy and sell from each other <br> everyday in local communities around
                            the world</p>
                    </div>
                    <!-- Advance Search -->
                    <div class="advance-search">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-12 col-md-12 align-content-center">
                                    <form method="GET" action="{{ path('postcodeinfo') }}">
                                        <div class="form-row">
                                            <div class="form-group col-md-10">
                                                <input type="text" class="form-control my-2 my-lg-1" id="inputtext4"
                                                       name="postcode" placeholder="What are you looking for"
                                                       value="{{ app.request.get('postcode') }}">
                                            </div>
                                            <div class="form-group col-md-2 align-self-center">
                                                <button type="submit" class="btn btn-primary">Search Now</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>
    <div class="container pt-5"></div>
    {% block postcode %}{% endblock %}
{% endblock %}